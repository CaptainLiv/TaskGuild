<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskguild.Controller_create_profile_view">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="WÃ¤hlen Sie bitte ihren Avatar aus!" textAlignment="CENTER" />
                  <Button fx:id="btn_next" cache="true" mnemonicParsing="false" onMouseClicked="#avatar_confirm" text="Weiter">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="view_avatar" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@../../../../java/com/example/taskguild/pictures/default.jpg" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="20.0" left="40.0" right="20.0" top="20.0" />
               </VBox.margin>
               <children>
                  <ButtonBar nodeOrientation="RIGHT_TO_LEFT">
                    <buttons>
                        <Button fx:id="btn_av7" mnemonicParsing="false" onMouseClicked="#avatar_select" text="Avatar 7" />
                        <Button fx:id="btn_av6" mnemonicParsing="false" onMouseClicked="#avatar_select" text="Avatar 6" />
                        <Button fx:id="btn_av5" mnemonicParsing="false" onMouseClicked="#avatar_select" text="Avatar 5" />
                        <Button fx:id="btn_av4" mnemonicParsing="false" onMouseClicked="#avatar_select" text="Avatar 4" />
                        <Button fx:id="btn_av3" mnemonicParsing="false" onMouseClicked="#avatar_select" text="Avatar 3" />
                        <Button fx:id="btn_av2" mnemonicParsing="false" onMouseClicked="#avatar_select" text="Avatar 2" />
                        <Button fx:id="btn_av1" mnemonicParsing="false" onMouseClicked="#avatar_select" text="Avatar 1" />
                    </buttons>
                  </ButtonBar>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Name:">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txt_name" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
